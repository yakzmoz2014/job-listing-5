<div class="pull-right">
  <%= link_to('Add a job', new_job_path, class: "btn btn-primary") %>
</div>
<table class="table table-boldered">
  <thead>
    <tr>
      <th>职位</th>
      <th>管理选项</th>
      <th>发布时间</th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= link_to(job.title, job_path(job)) %></td>
        <td>
          <%= link_to('Edit', edit_job_path(job)) %> |
          <%= link_to('Delete', job_path(job), method: :delete, data: {confirm: "Are you sure?"}) %>
        </td>
        <td><%= job.created_at %>
      </tr>
    <% end %>
  </tbody>
</table>
