<div class="form-box">
  <%= simple_form_for [:admin, @job] do |f| %>
    <%= f.input :title, label: "职位名称", input_html: {class: "form-control"}, placeholder: "工程师，UI设计师，PHP程序员……" %>

    <% if @job.category_name? %>
      <%= f.input :category_name, label: "职位类别",  collection: ["IT工程师", "产品经理", "设计师", "运营", "市场与销售", "高级管理", "金融", "其他"], as: :check_boxes, checked: @job.category_name %>
   <% else %>
     <%= f.input :category_name, label: "职位类型", collection: ["
用户运营", "产品运营", "活动运营", "电商运营", "微信运营","新媒体运营", "互联网推广", "其他"], as: :radio_buttons, checked: "技术" %>
  <% end %>

    <%= f.input :description, label: "描述", input_html: {class: "form-control"} %>

    <%= f.input :wage_lower_bound, label: '薪水:' do %>
       <%= f.input_field :wage_lower_bound, as: :string, placeholder: '下限' %> K ~
       <%= f.input_field :wage_upper_bound, as: :string, placeholder: '上限' %> K
    <% end %>

    <%= f.input :location, label: "地点", input_html: { class: "form-control"}, placeholder: "北京/上海/广州/深圳..."%>

    <%= f.input :company, label: "公司名称", input_html: { class: "form-control"} %>

    <%= f.input :contact_email, label: "联系邮箱" , placeholder: "admin@gmail.com"%>

    <%= f.input :is_hidden, label: "隐藏" %>

    <%= f.submit "提交", class: "btn btn-md btn-primary",data: { disable_with: "Submitting..." } %>
  <% end %>
</div>
