<% if current_page?('/') %>
  <nav class="navbar navbar-default transparent" role="navigation" id="navbar">
<% else %>
  <nav class="navbar navbar-default black" role="navigation">
<% end %>

<div class="container">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <a class="navbar-brand" href='/'>DreamOffer</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
          <li><%= link_to('首页', root_path) %></li>
          <li><%= link_to('求职', jobs_path) %></li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if !current_user %>
          <li><%= link_to("登录", new_user_session_path) %></li>
          <li>
              <%= link_to("注册", new_user_registration_path)%>
          </li>
        <% else %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              你好，<i class="fa fa-user" aria-hidden="true"></i> <%= current_user.display_name %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% if current_user.admin? %>
                <li><%= link_to('管理员', admin_account_jobs_path) %></li>
                <li class="divider"></li>
              <% end %>
              <li><%= link_to("个人中心", edit_account_user_path(current_user))%>
              <% if !current_user.admin? %>
                <li><%= link_to("我的收藏", account_jobs_path)%></li>
              <% end %>
              <li class="divider"></li>
              <li><%= link_to("退出", destroy_user_session_path, method: :delete) %></li>
            </ul>
          </li>
        <% end %>
      </ul>
      <%= form_tag search_jobs_path, :method => :get, class: "navbar-form navbar-right" do %>
        <div class="input-group">
          <input type="text" class="form-control" name="q" placeholder="搜索职位、公司" value="<%= params[:q] %>">
          <div class="input-group-btn">
            <button class="btn btn-default" type="submit">
              <i class="fa fa-search" aria-hidden="true"></i>
            </button>
          </div>
        </div>
    <% end %>
    </div>
    <!-- /.navbar-collapse -->
  </div>
  <!-- /.container-fluid -->
</div>
</nav>
