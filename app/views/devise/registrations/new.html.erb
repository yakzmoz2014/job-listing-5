
  <div class="moving-bg">
    <div class="image-content">
      <img src="http://ww1.sinaimg.cn/large/006tKfTcgy1fet9w41qy8j31hc0zgws0.jpg" class="change">
    </div>
  </div>

  <div class="registration-wrap">
    <div class="registration-block">
      <div class="content clearfix">
        <div class="right-part fr">
          <div class="devise">
            <h2>注册</h2>

            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= f.error_notification %>

              <div class="form-inputs">
                <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "邮箱" %>
                <%= f.input :username, required: true, label: false, placeholder: "昵称" %>
                <%= f.input :password, required: true, label: false, placeholder: "密码，6-16个字符，区分大小写" %>
                <%= f.input :password_confirmation, required: true, label: false, placeholder: "确认密码" %>
                <%= f.input :is_admin,
                            :label => false,
                            :collection => [[false, '求职者'], [true, 'HR']],
                            :label_method => :last,
                            :value_method => :first,
                            :as => :radio_buttons,
                            :item_wrapper_class => 'inline',
                            :checked => false %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "注册", class: "registration-btn" %>
              </div>
            <% end %>

            <div class="tip">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
